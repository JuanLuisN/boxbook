<div class="container mt-5"> <br>
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3><i class="fas fa-users-cog"></i> Mi perfil</h3>
                </div>
                <div class="card-body text-center">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-6 col-sm-12">
                            <img src="https://juanluisn.blob.core.windows.net/imagenes/Social Media_Flatline.png"
                                class="img-fluid">
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <div class="card shadow-lg">
                                <div class="card-header bg-dark">
                                    <h5 class="text-white">¡Bienvenido {{usuario.username}}!</h5>
                                </div>
                                <div class="card-body">
                                    <h5>Nombre completo</h5>
                                    <p class="text-secondary">{{usuario.nombreCompleto}}</p>
                                    <h5>Correo electronico</h5>
                                    <p class="text-secondary">{{usuario.correo}}</p>
                                    <hr>
                                    <h5>Objetivo de lecturas al año</h5>
                                    <p class="text-success">{{usuario.objetivoAnual}}</p>
                                    <button class="btn btn-success btn-block"><i class="fas fa-edit"></i> Editar
                                        perfil</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>