<div class="container pt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-12 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row justify-content-center align-items-center">
                        <div class="col-md-6">
                            <img src="https://juanluisn.blob.core.windows.net/imagenes/Reading a book_Monochromatic.png"
                                class="img-fluid">
                        </div>
                        <div class="col-md-6">
                            <h4 class="mt-2">Iniciar sesión</h4>
                            <hr class="mb-3">
                            <form action="/signin" method="POST">
                                <div class="form-group">
                                    <label for="">Correo electronico:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-envelope"></i>
                                            </div>
                                        </div>
                                        <input type="text" name="correo" placeholder="Correo electronico"
                                            class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="">Contraseña:</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-key"></i>
                                            </div>
                                        </div>
                                        <input type="password" name="contra" placeholder="Contraseña"
                                            class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-dark btn-block">Iniciar sesión</button>
                                </div>
                            </form>
                            <hr>
                            <h6 class="text-center"><small>¿Todavía no estas registrado? ¡Regístrate ahora!</small></h6>
                            <a href="/signup" class="btn btn-dark btn-block">Crear cuenta nueva</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>