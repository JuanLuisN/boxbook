<div class="container mt-4">
    <div class="card shadow mb-4">
        <div class="card-header bg-dark rounded">
            <button type="button" class="btn btn-info float-right" data-toggle="modal" data-target="#addFriendModal"><i
                    class="fas fa-user-plus"></i> Agregar amigo</button>
            <h2 class="text-center text-light mt-2">MIS AMIGOS</h2>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <input autocomplete="off" id="searchBooks" class="form-control mr-sm-2 me-auto"
                    placeholder="Buscar amigos">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-md-center aling-items-center">
            {{#each amigos}}
            <div class="col col-12 col-sm-12 col-md-4 col-lg-4 mb-5">
                {{#if (enviada status)}}
                <div class="card shadow text-center h-100 bg-info text-white">
                {{/if}}
                {{#if (pendiente status)}}
                <div class="card shadow text-center h-100 bg-warning">
                {{/if}}
                {{#if (amigos status)}}
                <div class="card shadow text-center h-100">
                {{/if}}
                    <div class="card-body">
                        <i class="fas fa-portrait fa-10x"></i>
                        <h3 class="mt-3">{{nombreCompleto}}</h3>
                        <h5><u>{{correo}}</u></h5>
                    </div>
                    <div class="card-footer">
                        {{#if (enviada status)}}
                        <a href="" class="btn btn-danger btn-block"><i class="fas fa-times"></i> Cancelar solicitud</a>
                        {{/if}}
                        {{#if (pendiente status)}}
                        <a href="/acceptRequest" class="btn btn-success btn-block"><i class="fas fa-check"></i> Aceptar solicitud</a>
                        <button type="button" data-toggle="modal" data-target="#deleteFriend{{id}}"
                            class="btn btn-danger btn-block">
                            <i class="fas fa-times"></i> Cancelar solicitud
                        </button>
                        {{/if}}
                        {{#if (amigos status)}}
                        <a href="/friendProfile={{id}}" class="btn btn-success btn-block"><i class="fas fa-glasses"></i> Visitar perfil</a>
                        <button type="button" data-toggle="modal" data-target="#deleteFriend{{id}}"
                            class="btn btn-danger btn-block">
                            <i class="fas fa-times"></i> Eliminar amigo
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{>userComponents/friendsModals/deleteFriendModal}}
            {{else}}
            <h1 class="text-center mt-4">No tienes amigos agregados<br>
                <small>Agrega a un nuevo amigo</small>
            </h1>
            {{/each}}
        </div>
    </div>
</div>
{{>userComponents/friendsModals/addFriendModal}}